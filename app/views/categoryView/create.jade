extends ./index

block content
	h1 Create Category Object
	div.listing
	form(name='saveCategory', action='/category/save', method='post')
		div
			label.category Parent Category:
			select
				option Medical
				option Insurance
				option Autos
		div
			label.category Name:
			input(type='text', name='name')
		div
			label.category Description:
			textarea(name='description', rows='4', cols='50')
		input(type='submit', name='submit')